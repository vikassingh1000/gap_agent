    "force_refresh": false,
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "token_encoding": "gpt2",
    "browser_use_api_key": "bu_tKgJM0JXS246sdkB4nsiQDd84PN2LJ1SmLlUun0g9Js"
